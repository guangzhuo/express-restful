{
  "ts-node": { "files": true },
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "build",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "lib": [
      "es6",
      "scripthost",
      "es2017"
    ],
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./*"]
    }
  },
  "include": ["src/**/*", "src/**/*", "tsconfig.json"]
}
